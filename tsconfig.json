{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx", 
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"], // Include DOM definitions
    "allowJs": true, // Allow JavaScript files
    "noEmitOnError": true, // Prevent emitting JS with errors
    "forceConsistentCasingInFileNames": true // Enforce consistent casing
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}